<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uo252406.notificaciones.MainActivity">

    <TextView
        android:id="@+id/tvTiempo"
        android:layout_width="208dp"
        android:layout_height="27dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="64dp"
        android:text="Tiempo de compra (segundos):"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/eTTime"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/eTTime"
        android:layout_width="111dp"
        android:layout_height="27dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp"
        android:layout_marginRight="37dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tVCompra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulsa ok para efectuar la compra"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="102dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTiempo"
        app:layout_constraintHorizontal_bias="0.503" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/ok"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/tVCompra"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:onClick="lanzar"/>
</android.support.constraint.ConstraintLayout>
